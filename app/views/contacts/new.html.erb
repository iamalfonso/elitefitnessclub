<h1>New Contact</h1>


  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h3>
        <%= pluralize(@contact.errors.count, "error") %> prohibited
        this contact from being saved:
      </h3>
      <ul>
        <% @contact.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_for :contact, url: contacts_path do |f| %>
	<p>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :email  %>
		<%= f.text_field :email %>
	</p>
	<p>
		<%= f.label :phone  %>
		<%= f.text_field :phone %>
	</p>
	<p>
		<%= f.label :note  %>
		<%= f.text_area :note, size: "80x5" %>
	</p>

	<%= f.submit %>

<% end %>